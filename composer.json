{
    "name": "amplexor/xconnect",
    "type": "library",
    "description": "A PHP client for the AMPLEXOR Translation Services (see http://www.amplexor.com/globalcontent/en/language-services/translation-services.html).",
    "keywords": ["language", "service", "api", "wrapper", "client", "GCM"],
    "homepage": "https://github.com/amplexor-drupal/xconnect",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Decuyper",
            "email": "peter.decuyper@amplexor.com",
            "homepage": "http://www.amplexor.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.4.0",
        "phpseclib/phpseclib": "~0.3.8"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "squizlabs/php_codesniffer": "2.*"
    },
    "autoload": {
        "psr-4": {
            "Amplexor\\XConnect\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Amplexor\\XConnect\\Test\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
